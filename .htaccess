# Hostinger Git Deployment .htaccess
# Handles routing for repo structure:
# /dist/ -> Frontend
# /php_backend/api/ -> Backend

RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 1. API Requests -> /php_backend/api/
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ php_backend/api/$1 [L,QSA]

# 2. Frontend Assets -> /dist/assets/
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^assets/(.*)$ dist/assets/$1 [L]

# 3. Specific files in root (like favicon, robots.txt) -> /dist/
# Add extensions as needed
RewriteCond %{REQUEST_URI} \.(png|jpg|jpeg|gif|ico|svg|json)$
RewriteCond %{REQUEST_URI} !^/php_backend/
RewriteCond %{REQUEST_URI} !^/dist/
RewriteRule ^(.*)$ dist/$1 [L]

# 4. SPA Routing -> /dist/index.html
# If not a file, directory, API request, or deploy script, serve index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/php_backend/
RewriteCond %{REQUEST_URI} !^/deploy\.php$
RewriteRule ^.*$ dist/index.html [L]

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Protect dotfiles and sensitive files/dirs
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
<FilesMatch "^(secrets\.php|composer\.json|package\.json|README\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>
